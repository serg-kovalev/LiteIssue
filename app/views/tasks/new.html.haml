%form{role: 'form', method: 'post', action: "#{task_path}"}
  = hidden_field_tag :authenticity_token, form_authenticity_token
  = hidden_field_tag 'task[project_id]', params[:id]
  .form-group
    = label_tag 'title', 'Title'
    = text_field_tag 'task[title]', nil, class: 'form-control'
  .form-group
    = label_tag 'description', 'Description'
    = text_area_tag 'task[description]', nil, class: 'form-control', id: 'markdown'
  %p.text-right
    = submit_tag 'Create', class: 'btn btn-success btn-xs'
